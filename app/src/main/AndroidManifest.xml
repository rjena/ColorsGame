<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.colorsgame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game1Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".InfoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game2Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game3Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game4Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game5Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game6Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game6EndActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>